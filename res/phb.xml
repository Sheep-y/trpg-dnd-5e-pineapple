   <character id="pc" name="PHB Character">
      <choice id="race" option="race" />
      <choice id="alignment" option="entity[type=alignment]" />
      <choice id="bonus_language" multiple="you.intm@level&lt;=1" repeat="false" option="entity[type=language][rarity=common]" />
      <choice id="background" option="background" min="0" />
      <choice id="class" option="class" />
   </character>

   <race id="dwarf">
      <feature id="size" set.size="m" />
      <feature id="speed" set.speed="25" />
      <feature id="language" prof.language="list[common,dwarvish]" />
      <feature id="darkvision">
         <effect type="darkvision">60</effect>
      </feature>
      <feature id="ability_score_adjustment">
         <adj prop="con" value="1" />
      </feature>
      <feature id="dwarven_weapon_proficiency">
         <prof type="weapon" value="list[battleaxe,handaxe,throwing_hammer,warhammer]" />
      </feature>
      <feature id="dwarven_resilience">
         <victum type="save" when="effect[type=poison]" set.advantage="1" />
         <victum type="damage" when="effect[type=poison]" set.resistant="1" />
      </feature>
      <feature id="stonecunning" /><!-- You have advantage on any intelligence (history) check related to the origin of particular stonework. Additionally, when exploring underground environments, you cannot become lost. -->
      <feature id="subrace">
         <choice repeat="false">
            <option>
               <feature id="hill">
                  <feature id="ability_score_adjustment" adj.str="1" />
                  <feature id="dwarven_toughness" adj.hp_max="you.level" />
               </feature>
            </option>
            <option>
               <feature id="mountain">
                  <feature id="ability_score_adjustment" adj.wis="1" />
                  <feature id="armor_mastery">
                     <prof type="weapon" value="equipment[type=armor][category=light,medium]" />
                     <when true="you.equiped.has[category=medium,heavy][type=armor]" adj.ac="1" />
                  </feature>
               </feature>
            </option>
         </choice>
      </feature>
   </race>
</pinapplebun>