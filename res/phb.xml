   </comment>
   <entity type="language" id="common" name="Common" letter="Common" rarity="common" />
   <entity type="language" id="dwarvish" name="Dwarvish" letter="Dwarvish" rarity="common" />
   <entity type="alignment" id="lg" name="Lawful Good"     lawful="1" chaotic="0" good="1" evil="0" />
   <entity type="alignment" id="ng" name="Neutral Good"    lawful="0" chaotic="0" good="1" evil="0" />
   <entity type="alignment" id="cg" name="Chaotic Good"    lawful="0" chaotic="1" good="1" evil="0" />
   <entity type="alignment" id="ln" name="Lawful Neutral"  lawful="1" chaotic="0" good="0" evil="0" />
   <entity type="alignment" id="tn" name="True Neutral"    lawful="0" chaotic="0" good="0" evil="0" />
   <entity type="alignment" id="cn" name="Chaotic Neutral" lawful="0" chaotic="1" good="0" evil="0" />
   <entity type="alignment" id="le" name="Lawful Evil"     lawful="1" chaotic="0" good="0" evil="1" />
   <entity type="alignment" id="ne" name="Neutral Evil"    lawful="0" chaotic="0" good="0" evil="1" />
   <entity type="alignment" id="ce" name="Chaotic Evil"    lawful="0" chaotic="1" good="0" evil="1" />

